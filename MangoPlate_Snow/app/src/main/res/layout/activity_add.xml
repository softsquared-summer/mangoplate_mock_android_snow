<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMainTheme">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="@color/colorMainTheme"
                android:src="@drawable/ic_go_to_see_eatdeal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EAT딜 보러가기"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_go_to_see_eatdeal"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="@color/colorMainTheme"
                android:src="@drawable/ic_i_visited"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="가봤어요"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_go_to_see_eatdeal"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="@color/colorMainTheme"
                android:src="@drawable/ic_write_review"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="리뷰 쓰기"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_go_to_see_eatdeal"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="@color/colorMainTheme"
                android:src="@drawable/ic_add_restaurant"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="식당 등록하기"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_go_to_see_eatdeal"/>
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>