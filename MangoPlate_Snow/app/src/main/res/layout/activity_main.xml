<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">

    <LinearLayout
        android:id="@+id/main_linear_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="60dp">
        <RelativeLayout
            android:id="@+id/main_relatvie_for_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ViewFlipper
                android:id="@+id/main_auto_sliding_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorMainTheme"/>
            <LinearLayout
                android:id="@+id/main_linear_mid_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/main_auto_sliding_banner"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="필터 부분"
                    android:textSize="40dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/main_iv_ob_lager"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/main_linear_mid_bar"
                android:background="#FF2255"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recyclerview_restaurant_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/main_iv_ob_lager"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/main_recyclerview_restaurant_list"
                android:layout_marginBottom="10dp"
                android:background="@color/colorMainTheme"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true">

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/main_linear_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>