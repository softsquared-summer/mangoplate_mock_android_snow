<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/select_district_top_tab"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </com.google.android.material.tabs.TabLayout>

    <com.softsquared.mangoplate_snow.src.main.bottom_sheet.BottomSheetViewPager
        android:id="@+id/select_district_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:id="@+id/select_district_recent_adjust"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check_district" />

        <TextView
            android:id="@+id/select_district_adjust_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/select_district_recent_adjust"
            android:text="@string/adjust"
            android:textSize="20dp" />

        <Button
            android:id="@+id/select_district_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/select_district_all_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:text="전체 선택 취소" />
    </RelativeLayout>
</LinearLayout>