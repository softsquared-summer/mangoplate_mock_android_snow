<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/select_district_top_tab"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </androidx.viewpager.widget.ViewPager>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:id="@+id/select_district_recent_adjust"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_check_district"
            android:background="#ffffff" />
        <TextView
            android:id="@+id/select_district_adjust_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="편집"
            android:textSize="20dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/select_district_recent_adjust"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/select_district_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/select_district_all_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 선택 취소"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"/>
    </RelativeLayout>
</LinearLayout>