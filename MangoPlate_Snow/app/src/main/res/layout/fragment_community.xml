<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#ffffff">
        <TextView
            android:id="@+id/community_tv_now_district"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/district_now"
            android:textSize="10dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"/>
        <Button
            android:id="@+id/community_tv_btn_district"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="2"
            android:text="화성시"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="top"
            android:layout_marginStart="15dp"
            android:drawableRight="@drawable/ic_next_to_district"
            android:stateListAnimator="@null"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLighterThanNotSelected"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/community_top_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:tabIndicatorColor="@color/colorMainTheme"
        app:tabSelectedTextColor="@color/colorMainTheme"
        app:tabTextColor="@color/colorNotSelected"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff">
        <ToggleButton
            android:layout_width="73dp"
            android:layout_height="28dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_delicious_selector"
            android:gravity="fill"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:stateListAnimator="@null"/>
        <ToggleButton
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_good_selector"
            android:gravity="fill"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:stateListAnimator="@null"/>
        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toggle_bad_selector"
            android:gravity="fill"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>
    <com.softsquared.mangoplate_snow.src.main.community.CommunityViewPager
        android:id="@+id/community_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>