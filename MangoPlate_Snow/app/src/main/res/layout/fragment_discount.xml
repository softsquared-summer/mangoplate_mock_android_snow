<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/discount_top_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/colorMainTheme"
        app:tabSelectedTextColor="@color/colorMainTheme"
        app:tabTextColor="@color/colorNotSelected">
    </com.google.android.material.tabs.TabLayout>
    <com.softsquared.mangoplate_snow.src.main.discount.DiscountViewPager
        android:id="@+id/discount_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>