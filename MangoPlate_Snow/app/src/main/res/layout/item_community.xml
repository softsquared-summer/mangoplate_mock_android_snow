<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/community_ib_user_profile_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/community_ib_user_profile_img"
            android:layout_alignTop="@id/community_ib_user_profile_img"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/community_tv_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유저닉네임"
                android:textColor="#000000"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_review_counter"/>
                <TextView
                    android:id="@+id/community_tv_review_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45"
                    android:textSize="12dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_follower_counter"/>
                <TextView
                    android:id="@+id/community_tv_follower_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="45"
                    android:textSize="12dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/community_iv_overall_assess"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delicious_review"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/community_btn_restaurant_name_and_location"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:text="나향반점 - 논현동"
        android:textSize="14dp"
        android:textColor="@color/colorMainTheme"
        android:stateListAnimator="@null"/>
    <TextView
        android:id="@+id/community_tv_user_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:maxLines="5"
        android:ellipsize="end"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <!--가로 스크롤 이미지 리사이클뷰-->
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/like"
            android:textSize="10dp"
            android:textColor="@color/colorNotSelected"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/community_tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20개"
            android:textSize="10dp"
            android:layout_marginStart="3dp"
            android:textColor="@color/colorNotSelected"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textSize="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorNotSelected"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/community_tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20개"
            android:textSize="10dp"
            android:layout_marginStart="3dp"
            android:textColor="@color/colorNotSelected"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/community_tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="경과시간"
            android:textSize="12dp"
            android:textColor="@color/colorNotSelected"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLighterThanNotSelected"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">
            <ToggleButton
                android:id="@+id/community_toggle_wannago"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:textOn=""
                android:textOff=""
                android:layout_centerVertical="true"
                android:stateListAnimator="@null"
                android:background="@drawable/toggle_community_wannago_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wannago"
                android:paddingStart="8dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/community_toggle_wannago"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp">
            <ToggleButton
                android:id="@+id/community_toggle_like"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:textOn=""
                android:textOff=""
                android:layout_centerVertical="true"
                android:stateListAnimator="@null"
                android:background="@drawable/toggle_community_like_selector"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like"
                android:paddingStart="8dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/community_toggle_like"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp">
            <ImageButton
                android:id="@+id/community_btn_comment"
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:stateListAnimator="@null"
                android:background="@drawable/ic_comment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:paddingStart="8dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/community_btn_comment"/>
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:src="@drawable/ic_more_info"
                android:scaleType="fitCenter" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>