<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorNotSelected">

    <FrameLayout
        android:id="@+id/item_top_list_title_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000000"/>
        <ImageView
            android:id="@+id/item_top_list_iv_top_of_top"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_toplist_top"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end|bottom"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_see_counter_white" />
            <TextView
                android:id="@+id/item_top_list_tv_see_counter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="조회수"
                android:textSize="11dp"
                android:layout_marginStart="1dp"
                android:gravity="center"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" | "
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/item_top_list_day_ago"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="경과일"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/item_top_list_title_img"
        android:background="#ffffff"
        android:layout_marginStart="0.5dp"
        android:layout_marginBottom="0.7dp"
        android:layout_marginEnd="0.5dp">
        <TextView
            android:id="@+id/item_top_list_tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="bottom"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="타이틀입니다아아"/>
        <TextView
            android:id="@+id/item_top_list_tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_top_list_tv_introduce"
            android:gravity="top"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="디테일입니다아아"/>
        <ToggleButton
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/toogle_bookmark_selector"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:stateListAnimator="@null" />

    </RelativeLayout>
</RelativeLayout>